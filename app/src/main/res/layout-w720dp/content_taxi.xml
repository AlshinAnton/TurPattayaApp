<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/appBar"
            layout="@layout/app_bar_main" />

        <TextView
            android:id="@+id/title_fragment_taxi"
            android:layout_below="@+id/appBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="30dp"
            android:text="Такси"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/content_fragment_taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_fragment_taxi"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textSize="30sp"
            android:text="Компания Turpattaya осуществляет трансферы по Тайланду. Заказать такси с нами легко." />


        <Spinner
            android:id="@+id/spinner_from_taxi_fragment"
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="350dp"
            android:layout_height="70dp"

            android:layout_below="@+id/content_fragment_taxi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:spinnerMode="dialog" />


        <Spinner
            android:id="@+id/spinner_destination_fragment_taxi"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@+id/spinner_from_taxi_fragment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:spinnerMode="dialog">

        </Spinner>

        <Spinner
            android:id="@+id/spinner_typeOfCar_fragment_taxi"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@+id/spinner_destination_fragment_taxi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:spinnerMode="dialog">

        </Spinner>

        <TextView
            android:id="@+id/priceResult_fragment_taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_typeOfCar_fragment_taxi"
            android:layout_centerHorizontal="true"
            android:paddingTop="30dp"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_taxi_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceResult_fragment_taxi"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:onClick="orderTAXI"
            android:text="ЗАКАЗАТЬ"
            android:textSize="40sp" />

    </RelativeLayout>
</ScrollView>