<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp"
    tools:context="ru.turpattaya.turpattayaapp.MainActivity">

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="45%"
        app:layout_heightPercent="100%"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/text_excursion_preview"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/image_preview"
        android:layout_alignParentTop="true"
        android:paddingStart="10dp"
        tools:text="здесь описание экскурсии , краткий вариант блаблабла, бла бла бла!!!" />

        <TextView
            android:id="@+id/text_price_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:layout_toEndOf="@+id/image_preview"
            android:layout_below="@+id/text_excursion_preview"
            tools:text="2500" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_price_preview"
            android:layout_below="@+id/text_excursion_preview"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:text="Бат" />

</android.support.percent.PercentRelativeLayout>

