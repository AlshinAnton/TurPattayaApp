<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.turpattaya.turpattayaapp.ExcursionDetailActivity"
    tools:showIn="@layout/activity_excursion_detail">

        <android.support.v4.view.ViewPager
            android:layout_height="200dp"
            android:layout_width="wrap_content"
            android:id="@+id/viewPager_excursion_detail"
            android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/image1_excursion_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </android.support.v4.view.ViewPager>


        <TextView
            android:id="@+id/excursion_detail_pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager_excursion_detail"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/excursion_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/excursion_detail_pagetitle"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>


