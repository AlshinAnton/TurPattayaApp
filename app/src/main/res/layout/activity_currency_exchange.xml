<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<RelativeLayout
    android:id="@+id/activity_currency_exchange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ru.turpattaya.turpattayaapp.currencyExchange.CurrencyExchangeActivity">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar_main" />

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/tvInfo"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вы можете открыть конвертер, нажав на нужную Вам валюту"
        android:textSize="24sp"
        android:layout_below="@+id/appBar"/>

    <ListView
        android:id="@+id/lvCurrency"
        android:layout_below="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
</android.support.v4.widget.DrawerLayout>