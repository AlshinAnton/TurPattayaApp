<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar_main" />

    <TextView
        android:id="@+id/contacts_tittle"
        android:text="Контактная информация"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"/>

    <TextView
        android:id="@+id/contacts_name"
        android:text="Антон"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_tittle"/>

    <TextView
        android:id="@+id/contacts_title_phone_rus"
        android:text="Для звонков из России:"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_name"/>

    <TextView
        android:id="@+id/contacts_phone_rus"
        android:text="+66-82-931-7754"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_title_phone_rus"/>

    <TextView
        android:id="@+id/contacts_title_phone_local"
        android:text="Для звонков с местного номера:"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_phone_rus"/>

    <TextView
        android:id="@+id/contacts_phone_local"
        android:text="082-931-7754"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_title_phone_local"/>

    <TextView
        android:id="@+id/contacts_tittle_email"
        android:text="e-mail: "
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_phone_local"/>

    <TextView
        android:id="@+id/contacts_email"
        android:text="turpattaya@gmail.com"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_tittle_email"/>

    <TextView
        android:id="@+id/contacts_tittle_webSite"
        android:text="Website"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_email"/>

    <TextView
        android:id="@+id/contacts_webSite"
        android:text="http://turpattaya.ru/"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacts_tittle_webSite"/>

</RelativeLayout>