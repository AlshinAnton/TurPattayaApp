<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.turpattaya.turpattayaapp"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity
            android:name="ru.turpattaya.turpattayaapp.excursions.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="ru.turpattaya.turpattayaapp.excursions.ExcursionDetailActivity"
            android:label="@string/title_activity_excursion_detail"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name="ru.turpattaya.turpattayaapp.taxi.OrderForm" />
        <activity android:name="ru.turpattaya.turpattayaapp.taxi.TaxiActivity" />
        <activity
            android:name="ru.turpattaya.turpattayaapp.BaseActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="ru.turpattaya.turpattayaapp.currencyExchange.CurrencyExchangeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name="ru.turpattaya.turpattayaapp.currencyExchange.CurrencyConverter" >
            android:theme="@style/Theme.AppCompat.NoActionBar"
        </activity>
        <activity android:name="ru.turpattaya.turpattayaapp.weather.WeatherActivity" />
        <activity android:name="ru.turpattaya.turpattayaapp.weather.SettingsWeatherActivity" />
        <activity android:name="ru.turpattaya.turpattayaapp.MyFavoriteActivity" />
        <activity android:name="ru.turpattaya.turpattayaapp.ShareActivity" />
        <activity android:name="ru.turpattaya.turpattayaapp.ContactsActivity" />
    </application>

</manifest>